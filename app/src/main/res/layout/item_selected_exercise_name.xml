<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:id="@+id/ll_selected_item"
    android:layout_width="@dimen/selected_item"
    android:layout_height="@dimen/selected_item"
    android:background="@drawable/item_selected_item_name"
    android:layout_margin="@dimen/panel_margin"
    >
    <View
        android:layout_gravity="top|right"
        android:layout_width="@dimen/selected_remove_item"
        android:layout_height="@dimen/selected_remove_item"
        android:background="@drawable/item_remove_item"/>
    <TextView
        android:id="@+id/tv_item_name"
        android:layout_gravity="center"
        android:paddingHorizontal = "@dimen/selected_item_text_padding"
        android:textSize="@dimen/selected_item_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="운동이름 운동이름 운동이름"/>

</FrameLayout>
</layout>